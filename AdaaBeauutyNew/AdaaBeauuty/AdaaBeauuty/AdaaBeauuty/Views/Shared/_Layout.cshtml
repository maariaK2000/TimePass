<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AdaaBeauty Users</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/showall.css")
    @Styles.Render("~/Content/MyAbout.css")
    @Styles.Render("~/Content/Admin.css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/LayoutPageCss.css")
    @Styles.Render("~/Content/AllUsersCss.css")
    @Styles.Render("~/Content/UsersLocCss.css")
    @Styles.Render("~/Content/MyFormCss.css")
    @Styles.Render("~/Content/GetRegisteredByIdCss.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="mynav-main navbar-fixed-top">
        <div class="container">
            <div class="mynav1">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AdaaBeauty", "Index", "Home", new { area = "" }, new { @class = "mynav-brand" })
            </div>
            <div class="mynav2 navbar-collapse collapse">
                <ul class="ulclass">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "mylinks" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { @class = "mylinks" })</li>
                    <li>
                        <p>Welcome @Session["regname"]</p>

                    </li>
                    <li>
                        @Html.ActionLink("SkinCare", "SkinCare", "Adaa")
                    </li>
                    <li>
                        <button>
                            @Html.ActionLink("Logout", "Login", "Register")
                        </button>

                    </li>
                    <li>
                        @Html.ActionLink("Order History", "GetHistoryCart", "Adaa")

                    </li>
                    <li>
                        <a href="~/Adaa/GetCart"><i class="fa fa-shopping-cart" style="font-size:34px;color:#7d5f55"></i></a>
                    </li>
                  
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="container-fluid">
            <p>&copy; @DateTime.Now.Year - AdaaBeauty Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
