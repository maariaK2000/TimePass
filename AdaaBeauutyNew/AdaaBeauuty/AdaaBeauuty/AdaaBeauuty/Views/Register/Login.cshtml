@model AdaaBeauuty.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>
<body>
    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" style="position:absolute;top:-50px;left:-80px;width:300px; height:300px;z-index:-1;opacity:0.4">
        <path fill="#c7a194" d="M66.9,-21.7C73.9,-0.1,58,28.9,36.2,43.1C14.5,57.3,-13.1,56.6,-29.2,44C-45.4,31.4,-50.1,6.8,-43.3,-14.5C-36.5,-35.7,-18.3,-53.7,5.8,-55.6C29.9,-57.5,59.8,-43.3,66.9,-21.7Z" transform="translate(100 100)" />
    </svg>
    <div class="main-div">
        <div class="img-div">
            <img src="~/fonts/mymodel.jpg" />
        </div>
        <div id="login-div">
            @using (Html.BeginForm(FormMethod.Post))
            {
                <table>
                    <tr>
                        <td class="tab-name">LOGIN</td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.UserName)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.UserName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.RegisterPwd)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.RegisterPwd)
                        </td>
                    </tr>
                    <tr>
                        <td column="2">
                            <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" name="Login" value="Login" class="btn" />
                            <input type="reset" name="Reset" value="Reset" class="btn" />
                            <h2>@Html.ActionLink("Login as an Admin", "MyAdmin", "Register")</h2>
                        </td>


                    </tr>
                    <td>@Html.ActionLink("Don't have an account ? Sign up", "MyForm", "Register")</td>

                    <td>@Html.ActionLink("Forgot Password?", "NewPassword", "Register")</td>
                </table>
            }
        </div>


    </div>
    
    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" style="position:absolute;top:-50px;left:-30px;width:300px; height:300px;z-index:-1;opacity:0.4">
        <path fill="#c7a194" d="M66.2,-19.5C71.1,-6.4,50.3,17.1,28.4,31C6.5,45,-16.4,49.6,-30.1,39.9C-43.9,30.3,-48.4,6.6,-41.9,-8.8C-35.3,-24.2,-17.7,-31.2,6.5,-33.3C30.6,-35.4,61.3,-32.6,66.2,-19.5Z" transform="translate(100 100)" />
    </svg>
    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" style="position:absolute;bottom:-50px;right:-80px;width:300px; height:300px;z-index:-1;opacity:0.4">
        <path fill="#c7a194" d="M66.2,-19.5C71.1,-6.4,50.3,17.1,28.4,31C6.5,45,-16.4,49.6,-30.1,39.9C-43.9,30.3,-48.4,6.6,-41.9,-8.8C-35.3,-24.2,-17.7,-31.2,6.5,-33.3C30.6,-35.4,61.3,-32.6,66.2,-19.5Z" transform="translate(100 100)" />
    </svg>
    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" style="position:absolute;bottom:-50px;right:0px;width:300px; height:300px;z-index:-1;opacity:0.4">
        <path fill="#c7a194" d="M66.9,-21.7C73.9,-0.1,58,28.9,36.2,43.1C14.5,57.3,-13.1,56.6,-29.2,44C-45.4,31.4,-50.1,6.8,-43.3,-14.5C-36.5,-35.7,-18.3,-53.7,5.8,-55.6C29.9,-57.5,59.8,-43.3,66.9,-21.7Z" transform="translate(100 100)" />
    </svg>
</body>
</html>