@model AdaaBeauuty.Models.RegisterViewModel

@{
    ViewBag.Title = "MyForm";
}

<h2>Create users</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enter User Details :</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-grp">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 txtlbl" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control txtbx" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-grp">
            @Html.LabelFor(model => model.RegisterPwd, htmlAttributes: new { @class = "control-label col-md-2 txtlbl" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RegisterPwd, new { htmlAttributes = new { @class = "form-control txtbx" } })
                @Html.ValidationMessageFor(model => model.RegisterPwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-grp">
            @Html.LabelFor(model => model.RegisterContact, htmlAttributes: new { @class = "control-label col-md-2 txtlbl" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RegisterContact, new { htmlAttributes = new { @class = "form-control txtbx" } })
                @Html.ValidationMessageFor(model => model.RegisterContact, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-grp">
            @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "control-label col-md-2 txtlbl" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control txtbx" } })
                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-grp">
            @Html.LabelFor(model => model.UserLocation, htmlAttributes: new { @class = "control-label col-md-2 txtlbl" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserLocation, new { htmlAttributes = new { @class = "form-control txtbx" } })
                @Html.ValidationMessageFor(model => model.UserLocation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-grp">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="mybtn" />
            </div>
        </div>
    </div>
}

<div class="link-cls">
    @Html.ActionLink("<< Back to Login", "Login","Register")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
