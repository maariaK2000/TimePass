@model dynamic

@{
    ViewBag.Title = "Users";
}

<h2>ADAA USERS</h2>
<p>
    @using (Html.BeginForm("Users", "Register", FormMethod.Get))
    {
        <b>Search By:</b>
        @Html.RadioButton("searchBy", "registerid") <text>Register Id</text>
        @Html.RadioButton("searchBy", "username", true) <text>Username</text> <br />
        @Html.TextBox("Search")
        <input type="submit" value="Search" class="btn btn-info" />
    }

</p>

@if (Model.Count == 0)
{
    <p><b>No results found for your search</b></p>
}
else
{


<table class="table mytable">
    <thead>
        <tr>
            <th>Register Id</th>
            <th>User Name</th>
            <th>Register Password</th>
            <th>Register Contact</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var myreg in Model)
        {
            if (@myreg.RegisterId % 2 == 0)
            {
                <tr class="even">
                    <th scope="row">@myreg.RegisterId</th>
                    <td>@myreg.UserName</td>
                    <td>@myreg.RegisterPwd</td>
                    <td>@myreg.RegisterContact</td>
                </tr>
            }
            else
            {
                <tr class="odd">
                    <th scope="row">@myreg.RegisterId</th>
                    <td>@myreg.UserName</td>
                    <td>@myreg.RegisterPwd</td>
                    <td>@myreg.RegisterContact</td>
                </tr>
            }

        }

    </tbody>
</table>
}



